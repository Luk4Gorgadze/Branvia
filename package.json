{
    "name": "branvia-monorepo",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "docker:dev": "docker compose --env-file .env -f compose.dev.yaml up -d",
        "docker:prod": "docker compose --env-file .env -f docker-compose.yml up -d",
        "docker:down": "docker compose down",
        "docker:build:nocache": "node scripts/build-docker-nocache.js",
        "dev": "pnpm prisma:build && concurrently --kill-others --names \"web,worker\" --prefix-colors \"blue,green\" \"pnpm dev:web\" \"pnpm dev:worker\"",
        "dev:with-dashboard": "pnpm prisma:build && concurrently --kill-others --names \"web,worker,dashboard\" --prefix-colors \"blue,green,cyan\" \"pnpm dev:web\" \"pnpm dev:worker\" \"pnpm dev:dashboard\"",
        "copy-env": "node scripts/copy-env.js",
        "copy-env:dev": "node scripts/copy-env.js dev",
        "copy-env:prod": "node scripts/copy-env.js prod",
        "copy-env:staging": "node scripts/copy-env.js staging",
        "cleanup-queue": "node scripts/cleanup-queue.js",
        "dev:web": "cd web && pnpm dev",
        "dev:worker": "cd worker && pnpm dev",
        "dev:dashboard": "cd worker && pnpm bull-board",
        "build": "pnpm --filter @branvia/database build && pnpm --filter branvia-app build && pnpm --filter branvia-worker build",
        "build:db": "pnpm --filter @branvia/database build",
        "build:web": "pnpm --filter branvia-app build",
        "build:worker": "pnpm --filter branvia-worker build",
        "prisma:generate": "cd packages/database && pnpm generate",
        "prisma:build": "cd packages/database && pnpm build",
        "prisma:migrate": "cd packages/database && pnpm migrate",
        "prisma:studio": "cd packages/database && pnpm studio",
        "prisma:reset": "cd packages/database && pnpm migrate reset"
    },
    "devDependencies": {
        "@bull-board/api": "^6.12.0",
        "@bull-board/express": "^6.12.0",
        "bullmq": "^5.56.9",
        "concurrently": "^8.2.2",
        "dotenv": "^16.3.1",
        "dotenv-cli": "^10.0.0",
        "express": "^5.1.0",
        "ioredis": "^5.7.0",
        "rimraf": "^5.0.5",
        "typescript": "5.8.2"
    },
    "dependencies": {
        "@google/generative-ai": "^0.24.1"
    }
}