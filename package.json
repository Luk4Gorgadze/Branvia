{
    "name": "branvia-monorepo",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "docker:dev": "docker compose --env-file .env -f compose.dev.yaml up -d",
        "docker:prod": "docker compose --env-file .env up -d",
        "docker:down": "docker compose down",
        "dev": "pnpm prisma:build && concurrently --kill-others --names \"web,worker\" --prefix-colors \"blue,green\" \"pnpm dev:web\" \"pnpm dev:worker\"",
        "dev:with-dashboard": "pnpm prisma:build && concurrently --kill-others --names \"web,worker,dashboard\" --prefix-colors \"blue,green,cyan\" \"pnpm dev:web\" \"pnpm dev:worker\" \"pnpm dev:dashboard\"",
        "dev:web": "cd web && pnpm dev",
        "dev:worker": "cd worker && pnpm dev",
        "dev:dashboard": "cd worker && pnpm bull-board",
        "build:web": "cd web && pnpm build",
        "build:worker": "cd worker && pnpm build",
        "build": "pnpm build:web && pnpm build:worker",
        "prisma:generate": "cd packages/database && pnpm generate",
        "prisma:build": "cd packages/database && pnpm build",
        "prisma:migrate": "cd packages/database && pnpm migrate",
        "prisma:studio": "cd packages/database && pnpm studio",
        "prisma:reset": "cd packages/database && pnpm migrate reset"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "dotenv-cli": "^10.0.0",
        "rimraf": "^5.0.5",
        "typescript": "5.8.2"
    }
}