{
    "name": "branvia-monorepo",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "docker:dev": "docker compose --env-file .env -f compose.dev.yaml up -d",
        "docker:worker": "docker compose up worker -d",
        "dev:web": "cd web && pnpm dev",
        "dev:worker": "cd worker && pnpm dev",
        "dev": "concurrently \"pnpm run dev:web\" \"pnpm run dev:worker\"",
        "build:web": "cd web && pnpm build",
        "build:worker": "cd worker && pnpm build",
        "build": "pnpm run build:web && pnpm run build:worker",
        "install:all": "pnpm install && pnpm install --filter web && pnpm install --filter worker",
        "clean": "rimraf node_modules web/node_modules worker/node_modules web/.next worker/dist",
        "prisma:generate": "cd web && pnpm prisma:generate",
        "prisma:migrate": "cd web && pnpm prisma:migrate",
        "prisma:studio": "cd web && pnpm prisma:studio",
        "prisma:reset": "cd web && pnpm prisma:reset"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "dotenv-cli": "^10.0.0",
        "rimraf": "^5.0.5",
        "typescript": "5.8.2"
    }
}