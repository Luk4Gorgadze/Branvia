# Caddyfile for Branvia
# Domain: branvia.art

# Main application - accept both HTTP and HTTPS internally
:80 {
    # Reverse proxy to your web container
    reverse_proxy web:3000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
        X-XSS-Protection "1; mode=block"
    }
    
    # Logging
    log {
        output file /var/log/caddy/access.log
        format json
    }
}

# Note: HTTP to HTTPS redirect is handled by Traefik on Dokploy
# Caddy only handles internal HTTPS traffic
