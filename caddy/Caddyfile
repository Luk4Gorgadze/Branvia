# Caddyfile for Branvia
# Domain: branvia.art
# Dashboard: dashboard.branvia.art
# WWW: www.branvia.art (redirects to main)

# Main application
branvia.art {
    # Reverse proxy to your web container
    reverse_proxy web:3000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
        X-XSS-Protection "1; mode=block"
    }
    
    # Automatic HTTPS with Let's Encrypt
    tls {
        on_demand
    }
    
    # Logging
    log {
        output file /var/log/caddy/access.log
        format json
    }
}

# WWW redirect to main domain
www.branvia.art {
    redir https://branvia.art{uri} permanent
    tls {
        on_demand
    }
}

# Dashboard subdomain
dashboard.branvia.art {
    # Reverse proxy to your web container (same app, different route handling)
    reverse_proxy web:3000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
        X-XSS-Protection "1; mode=block"
    }
    
    # Automatic HTTPS with Let's Encrypt
    tls {
        on_demand
    }
    
    # Logging
    log {
        output file /var/log/caddy/dashboard.log
        format json
    }
}

# HTTP to HTTPS redirect
:80 {
    redir https://{host}{uri} permanent
}
